PRO.4                                                                          <<13-02-26>>
#include<iostream>
using namespace std;
main()
{
	int a,b,c;
	
	cout<<"enter a 1 number:";
	cin>>a;
	cout<<"enter a 2 number:";
	cin>>b;
	c=a+b;
	cout<<a<<"+"<<b<<"="<<c<<endl;
	cout<<"a="<<a<<endl<<"b="<<b<<endl<<"c="<<c<<endl;
	
}

