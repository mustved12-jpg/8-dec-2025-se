#include<iostream>
using namespace std;
class Student
{
	public:
		int id;
		string name;
		
		void input()
		{
			cout<<"enter a id:";
			cin>>id;
			cout<<"enter a name:";
			cin>>name;
		}
		void display()
		{
			cout<<"id="<<id;
			cout<<"\nname="<<name;
		}
};
main()
{
	Student obj=Student();
	
	obj.input();
	obj.display();
}
/*
output:
enter a id:2
enter a name:mustved
id=2
name=mustved
*/