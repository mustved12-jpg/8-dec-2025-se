                                PASS BY VALUE:
PRO.1                                                                          <<17-02-26>>
#include<iostream>
using namespace std;
class Student
{
	public:
		int a;
		
		void di(Student s)
		{
			s.a=200;
		}
};
main()
{
	Student s1;
	s1.a=10;
	s1.di(s1);
	cout<<"\n after change a="<<s1.a;
}
/*
output:
after change a=10
*/
