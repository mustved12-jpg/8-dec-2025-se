                                       Hybrid:
PRO.1                                                                          <<19-02-26>>
#include<iostream>
using namespace std;
class A
{
	public:
		int marks=87;
};
class B:public A
{
	public:
		void dib()
		{
		cout<<"\n in B class marks : "<<marks;
        }
};
class C:public A
{
	public:
		void dic()
		{
		cout<<"\n in C class marks : "<<marks;
		}
};
class D:public B,public C
{
	
};
main()
{
	D obj;
	
	obj.dib();
	obj.dic();
}
/*
output:
in B class marks : 87
in C class marks : 87
 */

