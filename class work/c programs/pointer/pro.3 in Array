PRO.3                     max number                                           <<10-02-26>>
#include<stdio.h>
void main()
{
	int a[5]={35,42,76,52,92};
	int *p,max;
	p=a;
	max=*p;
	for(int i=1;i<5;i++)
	{
		if(max<*(p+i))
		{
			max=*(p+i);
		}
	}
	printf("%d",max);
	
}
/*
output:92
*/
