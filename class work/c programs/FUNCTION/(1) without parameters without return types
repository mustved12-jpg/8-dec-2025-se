//without loop
#include<stdio.h>
void add();
void sub();
void mul();
void di();
void main()
{
    int num;
    printf("\n\n----------------MENU----------------\n\n");
    printf("\nfor addition press->1.");
    printf("\nfor substraction press->2.");
    printf("\nfor multiplication press->3.");
    printf("\nfor division press->4.");
    printf("\n\n Enter a number:");
    scanf("%d",&num);
    switch(num)
    {
        case 1:
        add();break;
        case 2:
        sub();break;
        case 3:
        mul();
        case 4:
        di();break;
        
    }
}
void add()
{
    int a,b;
    printf("enter a first number:");
    scanf("%d",&a);
    printf("enter a second number:");
    scanf("%d",&b);
    printf("%d",a+b);
    
}
void sub()
{
    
    int a,b;
    printf("enter a first number:");
    scanf("%d",&a);
    printf("enter a second number:");
    scanf("%d",&b);
    printf("%d",a-b);
    
}
void mul()
{
    
    int a,b;
    printf("enter a first number:");
    scanf("%d",&a);
    printf("enter a second number:");
    scanf("%d",&b);
    printf("%d",a*b);
    
}
void di()
{
    
    int a,b;
    printf("enter a first number:");
    scanf("%d",&a);
    printf("enter a second number:");
    scanf("%d",&b);
    printf("%d",a/b);
    
}
