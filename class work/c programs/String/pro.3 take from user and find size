#include<stdio.h>
#include<string.h>
void main()
{
    char name1[20];
    char name2[20];
    printf("enter a firs name:-");
    gets(name1);
    printf("enter a secound name:-");
    gets(name2);
    printf("\n%s %s \nfirt name size=%d\nseound name size=%d\n",name1,name2,strlen(name1),strlen(name2));
    
}
/*
out put:
enter a firs name:-mohammed
enter a secound name:-mustved

mohammed mustved 
firt name size=8
seound name size=7
*/