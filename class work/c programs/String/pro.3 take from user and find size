#include<stdio.h>
#include<string.h>
void main()
{
    char name[20];
    printf("enter a neme:");
    scanf("%s",&name);       // agr user se humko bus 4 hi carecter lena ho to num(%4s) likhenge
    printf("\n%.4s",name);  //(%.4s) likhne se vo bas 4 hi name dikahye ga 
    printf("\n%s size is=%d",name,strlen(name));
}
/*
out put:
enter a neme:mustved

must
mustved size is=7
*/
