#include<stdio.h>
#include<string.h>
void main()
{
    char name[20];
    printf("enter a neme:");
    gets(name);
    printf("\n%s size is=%d",name,strlen(name));
}
/*
out put:
enter a neme:mohammed mustved

mohammed mustved size is=16
*/
