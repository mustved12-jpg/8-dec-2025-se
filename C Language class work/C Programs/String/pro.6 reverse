#include<stdio.h>
#include<string.h>
void main()
{  int i,s;
   char name[20];
   printf("enter a name 1:");
   scanf("%s",name);
   s=strlen(name);
   for(i;i<s;i++)
   {
       
   }
   for(s;s>=0;s--)
   {
       printf("%c",name[s]);
   }
}