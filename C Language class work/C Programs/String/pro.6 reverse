                                    without inbuilt
                                                                            <<03-02-26>>
PRO.1
#include<stdio.h>
#include<string.h>
void main()
{
    int i,j=0,t,s;
    char name[100];
    printf("enter a name:");
    gets(name);
    s=strlen(name);
    printf("\nsize:%d",s);
    for (i=s-1;i>j;i--)
    {
        t=name[i];
        name[i]=name[j];
        name[j]=t;
        j++;
        
    }
    printf("\n%s",name);
}
