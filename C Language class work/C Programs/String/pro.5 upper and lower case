#include<stdio.h>
#include<string.h>
#include<ctype.h>
void main()
{
    char name[20];
    printf("Enter a name:");
    gets(name);
    printf("\nyour name is \"%s\"",name);
     for(int i=0;name[i]!='\0';i++)
    {
        name[i]=toupper(name[i]);
    }
   
    printf("\nthis is your lower carecter name\'\'\'%s\'\'\'",name);
   
    
}
