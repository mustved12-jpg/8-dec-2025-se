                                   LOWER CASE
                                                                               <<02-02-26>>
pro.2                          in built
#include<stdio.h>
#include<string.h>
#include<ctype.h>
int main()
{
    char name[30];
    int i;
    printf("Enter your name : ");
    gets(name);
    
    printf("name :%s",name);
    
    for(i = 0;name[i] != '\0';i++)
    {
        name[i] = tolower(name[i]);
    }
    printf("\nlower->''%s'' ",name);
    printf("\n-------------------------\n(SIZE=%d)\n-------------------------\n",strlen(name));
}
/*
OUTPUT:
Enter your name :IM.MOHAMMED MUSTVED
name :IM.MOHAMMED MUSTVED
lower->''im.mohammed mustved'' 
-------------------------
(SIZE=19)
-------------------------

*/
>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
                                      without inbuilt
                                                                               <<02-02-26>>
#include<stdio.h>
#include<string.h>
int main()
{
	char name[20];
	int s;
	printf("enter a name:");
	gets(name);
	name[strlen(name)];
	for(int i=0;name[i]!='\0';i++)
	{
		if(name[i]<='a'||name[i]<='z')
		{
			name[i]=name[i]-32;
		}
	}
	printf("\n%s",name);
}
/*
output:
enter a name:mustved {agar hum isme spece deng to ye @ print kartahai uski jga ye khami hai}

MUSTVED
*/