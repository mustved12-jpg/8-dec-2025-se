#include<stdio.h>
int main()
{
	int i,s=0;
	char a[20];/ agrr name 20 se jyada huva to garbeg ayega.
	printf("enter a name:");
	gets(a);
	for(i=0;a[i]!='\0';i++)
	{
		s++;
	}
	printf("\nsize=%d",s);
}