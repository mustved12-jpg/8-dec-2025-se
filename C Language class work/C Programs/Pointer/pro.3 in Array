                             pointer in Array
PRO.1                                                                          <<10-02-26>>
#include<stdio.h>
main()
{
	int a[5]={35,42,76,52,98};
	int *p;
	printf("simple print\n");
	for(int i=0;i<5;i++)
	{
		printf("\n%d",a[i]);
	}
	
	printf("\n\npointer print\n");
	
	p=a;
	
	for(int i=0;i<5;i++)
	{
		printf("\n%d",*(p+i));
	}
	
}
/*output:
simple print

35
42
76
52
98

pointer print

35
42
76
52
98
*/
