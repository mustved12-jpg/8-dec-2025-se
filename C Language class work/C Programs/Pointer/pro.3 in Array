PRO.3                             sum of aarry                                 <<10-02-26>>
#include<stdio.h>
 void main()
{
	int a[5]={35,42,76,52,92};
	int *p;
	int sum=0;
	p=a;
	for(int i=0;i<5;i++)
	{
		sum+=*(p+i);
	}
	printf("sum=%d",sum);
}
/*
out put:
sum=297
*/
