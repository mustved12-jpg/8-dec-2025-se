PRO.2                                                                          <<10-02-26>>
#include<stdio.h>
#include<string.h>
#include<stdbool.h>
#include<ctype.h>
int main()
{
	int a[5];
	int *p;
	
	for(int i=0;i<5;i++)
	{
		p=&a[i];
		printf("\nenter array %d eliment:",i);
		scanf("%d",&a[i]);
		printf("address:%d\n",p);
	}
}
&&&&&&&&&&&&&&&&&&&&&&&&&&<<   OR  >>&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&&
#include<stdio.h>
#include<string.h>
#include<stdbool.h>
#include<ctype.h>
int main()
{
	int a[5];
	int *p;
	p=a;
	for(int i=0;i<5;i++)
	{
		printf("\nenter array %d eliment:",i);
		scanf("%d",&*(p+i));
		printf("address:%d\n",&a[i]);
	}
	
	for(int i=0;i<5;i++)
	{
		printf("\nenter array %d eliment:%d",i,*(p+i));
	}
}
/*output:
enter array 0 eliment:67
address:6487536

enter array 1 eliment:56
address:6487540

enter array 2 eliment:89
address:6487544

enter array 3 eliment:6
address:6487548

enter array 4 eliment:23
address:6487552
*/

