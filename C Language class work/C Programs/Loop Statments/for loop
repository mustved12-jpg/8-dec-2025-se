#include <stdio.h>

int main()
{
    int i;
    int a;
    
        printf("entere a number:");
        scanf("%d",&a);// user btaye ga mujhe kaha se suru karna hai
    for(i=1;i<=5;i++)// ye 5 loop bnaye ga 
    {
        printf("%d\n",a);
        a++;
        
    }
}  /*output: enter a number:1
             1
             2 
             3    
             4 
             5 
             */

