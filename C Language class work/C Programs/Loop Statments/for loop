// loop ke ander user se number lena hai 

#include<stdio.h>
void main()
{
    for (int i=1;i<=10;i++)
    {
        printf("\nenter a number :");
        scanf("%d",&i);
        printf("ans%d=%d",i,i+1);  // isme mene plus kiya hai to ans 1 plus ho ke aye ga 
        
        getchar();
    }
}

