// user se end number or start number lena hai

#include<stdio.h>
void main()
{
    int a,b;
    printf("enter a start number:");
    scanf("%d",&a);
    
    printf("enter a end number:");
    scanf("%d",&b);
    
    for(int i=a;i<=b;i++)
    {
        printf("\n%d",i);
    }
}/* output:   enter a start number:1 
              enter a end number :7
              
                         1 
                         2 
                         3 
                         4 
                         5 
                         6 
                         7 
                         */
