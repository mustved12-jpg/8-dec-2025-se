                                                                                       <7-1-2026>
#include <stdio.h>

int main()
{

    int a,c,i,b;
    printf("enter a (b) number:");
    scanf("%d",&b);
    printf("enter a number:");
    scanf("%d",&a);
    for(i=1;i<=b;i++)
    {
        c=i*a;
        
        printf("%d*%d=%d\n",a,i,c);
    }
}  
/*
enter a (b) number:10
enter a number:2
2*1=2
2*2=4
2*3=6
2*4=8
2*5=10
2*6=12
2*7=14
2*8=16
2*9=18
2*10=20
*/
