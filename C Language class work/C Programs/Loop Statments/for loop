#include <stdio.h>

int main()
{

    int f=1,i,b;
    printf("enter a (b) number:");
    scanf("%d",&b);
    for(i=1;i<=b;i++)
    {
        f*=b;
        
        printf("%d\n",f);
    }
}  
/*enter a (b) number:5  5 loop to bnega hi
enter a number:5
5
25
125
625
3125
--------
enter a (b) number:5
enter a number:4
4
16
64
256
1024*/


