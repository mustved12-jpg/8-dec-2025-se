                              character(char(%c))

// loop ke ander user se number lena hai 

#include<stdio.h>
void main()
{   
    char h;
    
    for (int i=1;i<=5;i++)
    {
        printf("enter a character :");
        scanf("%c",&h);  
        getchar();          //char 5 a b c d e likhne ke bad ruk jaye ga 
    }
}

/* output:   enter a  character:a
             enter a  character:b 
             enter a  character:c 
             enter a  character:d 
             enter a  character:e  */
