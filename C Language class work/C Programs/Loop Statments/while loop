// hanmo user se number lena hai age continue karne ke liye user se char yes or no pucho
 pro.3
#include<stdio.h>
#include<stdbool.h>
void main()
{

    bool t=true; // fist time loop me jane ke liye
    int num;
     char ch;
    while(t)            
    {
        printf("enter a number:");
        scanf("%d",&num);
        printf("enter (y) for yes and (n) for no :");
        scanf("%c",&ch);   // space dena jaruri ahi %c mai
        switch(ch)                        // if mai bhi kar sakte hai e.g   if (ch=='y'||ch=='Y')
       { case 'y':                         //                                {  t=true;  }
        case 'Y':                          //                               else
        t=true;break;                      //                               {  t=false;  }
        default:
        t=false;break;
       }
    }
}     /* output aye ga enter a number:5  mene samjhio 5 dala 
                        enter (y) (n) vala : y   agar me y likhta hu to fir se lop chlu hoga 
                       enter a number : 6  ab mene 6 dala
                       enter (y).....: n   to progarme ruk jaye ga iske bad loop khatam nki jgha or kuch bhi hoga ta yhi hoag sivay y ke */
