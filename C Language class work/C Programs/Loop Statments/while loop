pro.5

#include<stdio.h>
#include<stdbool.h>
void main()
{    
    int i=1,b,f;
    bool k=true;
    char ch;
    while (k)
    {printf("enter a (f) number:");
    scanf("%d",&f);
        printf("enter a (b) number:");
    scanf("%d",&b);
    printf("enter a ch number:");// isme bhi sem jo last ka hoga vhi ka total print hoga q ki dono under hai(pro.4 me)
    scanf(" %c",&ch);
    if(ch=='n')
    {
        k=false;
    }
        f*=b;
        printf("%d\n",f);
    }
    
}
