pro.4
// hamko nhi pata kab end hai 
#include<stdio.h>
#include<stdbool.h>
void main()
{    bool start=true;
    int num;
    int sum=0; // agar hum isko bhi loop mai user ke pas se lenge to aagr total last me dekhenge to jo ham num or sum last me karen ge bas usi ka plus aye ga 
    char ch;
    
    while(start)
    
    { 
        printf("enter a num number:");
    scanf("%d",&num);
    getchar();
    printf("enter a ch number:");
    scanf(" %c",&ch);
    if(ch=='n')  // jub tak hum n nhi daalenge tab atk plus hoga
    {
        start=false; 
    }
    sum+=num;
    
    }
    printf("%d total",sum);getchar();
}
