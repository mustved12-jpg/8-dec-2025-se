#include<stdio.h>
void main()
{
    int a,i=1;
    printf("enter a number:");// isme hum user se le rhe hai
    scanf("%d",&a);
    while(i<=a)
    {
        printf("\nnumber:%d",i);
        i++;
        
    }
}
